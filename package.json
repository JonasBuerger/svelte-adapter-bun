{
  "name": "@jonasbuerger/svelte-adapter-bun",
  "version": "2.0.3",
  "description": "Adapter for SvelteKit apps that generates a standalone Bun.js server.",
  "main": "index",
  "types": "index",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src/*.d.ts",
    "index.d.ts",
    "index.ts",
    "files"
  ],
  "scripts": {
    "build": "bun run format && bun run build:types && bun run build:server",
    "build:types": "bunx --bun tsc -d",
    "build:server": "bun build src/index.ts src/handler.ts --target=bun --format=esm --splitting --outdir=files --external=__SERVER --external=__MANIFEST",
    "format": "bunx --bun prettier --write .",
    "prepack": "bun run build",
    "clean": "rm -rf files && rm -rf ./*.js && rm -rf ./*.d.ts && rm -rf ./src/*.js && rm -rf ./src/*.d.ts && echo 'Done.'",
    "watch": "bun --watch run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JonasBuerger/svelte-adapter-bun.git"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "sveltekit-adapter",
    "bun"
  ],
  "author": "Jonas BÃ¼rger <@jonasbuerger>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JonasBuerger/svelte-adapter-bun/issues"
  },
  "homepage": "https://github.com/JonasBuerger/svelte-adapter-bun#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.0.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@sveltejs/kit": "^1.30.4",
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.9",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "prettier": "^3.3.2",
    "totalist": "^3.0.1",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "tiny-glob": "^0.2.9",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.18.0"
  },
  "engines": {
    "bun": "^1.1.17"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "access": "public"
  }
}
